<%= form_for @ride, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :ride_start_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :ride_start_time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ride_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :ride_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ride_distance, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :ride_distance, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ride_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.time_select :ride_time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ride_speed_average, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :ride_speed_average, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ride_speed_max, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :ride_speed_max, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rider_username, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :rider_username, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ride_distance_climbed, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :ride_distance_climbed, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  rides_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
