<%- model_class = EventPost -%>
<div class="page-header">
  <h1><%=t '.title', :default => EventPost %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @event_post.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:author) %></dt>
      <dd><pre class="prettyprint"><%= @event_post.author %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:event_name) %></dt>
      <dd><pre class="prettyprint"><%= @event_post.event_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:event_date_time) %></dt>
      <dd><pre class="prettyprint"><%= @event_post.event_date_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:event_description) %></dt>
      <dd><pre class="prettyprint"><%= @event_post.event_description %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              event_posts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_post_path(@event_post), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_post_path(@event_post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

