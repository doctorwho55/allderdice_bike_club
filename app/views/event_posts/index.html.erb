<%- model_class = EventPost -%>
<div class="page-header">
  <h1><%=t '.title', :default => EventPost %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:event_name) %></th>
      <th><%= model_class.human_attribute_name(:event_date_time) %></th>
      <th><%= model_class.human_attribute_name(:event_description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @event_posts.each do |event_post| %>
      <tr>
        <td><%= event_post.id %></td>
        <td><%= event_post.title %></td>
        <td><%= event_post.author %></td>
        <td><%= event_post.event_name %></td>
        <td><%= event_post.event_date_time %></td>
        <td><%= event_post.event_description %></td>
        <td><%=l event_post.created_at, format: :long %></td>
        <td>
          <%= link_to event_post_path(event_post), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to event_post_path(event_post), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_event_post_path,
            :class => 'btn btn-primary' %>
